<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pfariasmunoz.indensales.ui.activities.AddSaleActivity">

    <fragment
        android:id="@+id/fl_articles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:name="com.pfariasmunoz.indensales.ui.fragments.ArticlesFragment"/>

    <fragment
        android:id="@+id/fl_sales_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.pfariasmunoz.indensales.ui.fragments.SalesBarFragment"/>

</LinearLayout>
